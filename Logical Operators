public class LogicalOperatorsExample {
    public static void main(String[] args) {
        
        boolean isStudent = true;
        boolean hasID = false;

        if (isStudent && hasID) {
            System.out.println("You can enter the campus.");
        } else {
            System.out.println("You cannot enter the campus.");
        }

        if (isStudent || hasID) {
            System.out.println("You have at least one requirement.");
        }

        boolean notStudent = !isStudent;
        System.out.println("Is not a student: " + notStudent);
    }
}
